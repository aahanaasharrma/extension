{
  "manifest_version": 3,
  "name": "Website Blocker",
  "version": "1.0",
  "action": {
    "default_popup": "./src/popup.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "nativeMessaging",
    "activeTab",
    "storage",
    "webRequest",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./src/content.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "./src/background.js"
  },
  "options_ui": {
    "page": "./src/options.html"
  }
}
